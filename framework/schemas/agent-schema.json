{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Schema",
  "description": "Defines the structure for agents, their metadata, capabilities, and logs.",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string"
    },
    "agent_id": {
      "type": "string"
    },
    "persona": {
      "type": "string"
    },
    "agents_involved": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "capabilities": {
      "type": "array"
    },
    "status": {
      "type": "string"
    },
    "log": {
      "type": "string"
    }
  },
  "required": [
    "agent"
  ]
}