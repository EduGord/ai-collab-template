{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Goal Schema",
  "description": "Schema for defining project goals and lifecycle objectives.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "related_routines": {
      "type": "array"
    },
    "status": {
      "type": "string"
    },
    "priority": {
      "type": "string"
    },
    "owned_by": {
      "type": "string"
    },
    "version": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "title",
    "description"
  ]
}