{
  "agent": "evolve-agent",
  "description": "The evolve-agent is responsible for continuously improving and adapting the system's capabilities. It analyzes system performance, identifies areas for enhancement, and implements changes to improve efficiency and effectiveness.",
  "domains": [
    "planning",
    "execution",
    "optimization",
    "adaptation"
  ],
  "inputs": [
    "intent.json",
    "task-spec.json"
  ],
  "outputs": [
    "execution-log.json",
    "improvement-proposals.json",
    "updated-system-components.json"
  ],
  "decisionScope": [
    "task-assignment",
    "pipeline-selection",
    "system-component-updates",
    "resource-allocation"
  ],
  "relationships": {
    "delegatesTo": [
      "planner-agent",
      "tasking-agent"
    ],
    "supervisedBy": [
      "meta-agent"
    ],
    "relatedTo": [
      "audit-agent",
      "recovery-agent"
    ]
  },
  "executionMetrics": ["tokenUsage", "estimatedCost", "executionHistory"],
  "operationalProcedures": ["routine-gap-detection", "self-introspection", "self-review-hook","system-evolve-cycle"]
}